<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Client.PreviousJourneyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/prevJourneysToolbar"
        android:layout_width="match_parent"
        android:background="@color/hassan"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/backPrevJ"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_centerVertical="true"/>

            <com.wasalny.Fonts.EnglishLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Journeys"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/previousRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prevJourneysToolbar"/>

</RelativeLayout>