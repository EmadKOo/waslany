<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.Driver.DriverRegister">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/haze"
        android:scaleType="centerCrop"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/mProgress"
            />

    <com.wasalny.Fonts.Comforta
        android:id="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:text="Wasalny was found to save time and efforts."
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="120dp" />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/driverImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/placeholder"
        android:layout_below="@id/introText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

        <com.wasalny.Fonts.Comforta
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="tap on placeholder to select your image"
            android:layout_below="@+id/driverImage"
            />
    <EditText
        android:id="@+id/cityDriver"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dp"
        android:hint="CITY"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white2"
        android:layout_below="@id/driverImage"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/carModelNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dp"
        android:hint="CAR MODEL NUMBER"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white2"
        android:layout_below="@id/cityDriver"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/driverLicence"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dp"
        android:hint="DRIVING LICENSE"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white2"
        android:layout_below="@id/carModelNumber"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/userIdentity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dp"
        android:hint="USER IDENTITY"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white2"
        android:layout_below="@id/driverLicence"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="15sp" />
    <Button
        android:id="@+id/registerDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/btn_register"
        android:textColor="@color/white"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_below="@id/userIdentity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    </RelativeLayout>
</FrameLayout>