<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.Client.ClientRegister">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/haze"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <com.wasalny.Fonts.Comforta
        android:id="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Wasalny was found to save time and efforts."
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="120dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/clientImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/placeholder"
            android:layout_below="@id/introText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />

        <com.wasalny.Fonts.Comforta
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="tap on placeholder to select your image"
            android:layout_below="@+id/clientImage"
            />
    <EditText
        android:id="@+id/cityClient"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect"
        android:drawableStart="@drawable/ic_home_black_24dp"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10dp"
        android:hint="CITY"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white2"
        android:layout_below="@id/clientImage"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="15sp" />


    <CheckBox
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree with all Terms of Services"
        android:textColor="@color/white"
        android:layout_below="@id/cityClient"
        android:theme="@style/MyCheckBox"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/agree"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_register"
        android:textColor="#fff"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_marginTop="10dp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/sProgress"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:visibility="gone"
            />

    </RelativeLayout>
</FrameLayout>